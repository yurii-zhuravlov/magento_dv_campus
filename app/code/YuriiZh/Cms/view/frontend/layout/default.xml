<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Cms\Block\Block" name="Demo" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">demo-cms-block</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="ImageAndText" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">image-and-text-block</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
